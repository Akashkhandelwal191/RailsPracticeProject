
<div class="container p-2">
<%= form_with model: Address.new, id: 'addressForm', local: false do |form| %>
 
  <div class="row mt-2">

   <div class="col-md-12">
     <%= form.label :Address_Type,class:"form-check-label"%>
     <div style="font-size: 15px;">  
     <%= form.radio_button :address_type, "home",autofocus:true,class:"form-check-input" %>
     <%= form.label :Home, "Home",class:"form-check-label" %>
     &nbsp;
     <%= form.radio_button :address_type, "work",autofocus:true,class:"form-check-input"%>
     <%= form.label :WORK, "WORK",class:"form-check-label"%>
     &nbsp;
     <%= form.radio_button :address_type, "other",autofocus:true,class:"form-check-input"%>
     <%= form.label :OTHER, "OTHER",class:"form-check-label"%>
    </div>

  </div>

  </div>
 
  <div class="row mt-2">

     <div class="col-md-6">
     <%= form.label :country,class:"form-label"%>
     <%= form.text_field :country, placeholder: 'Enter Your Country Name',class:"form-control" %>  
     </div>

     <div class="col-md-6">

      <%= form.label :state,class:"form-label"%>
    <%= form.text_field :state, placeholder: 'Enter Your State Name',class:"form-control" %>
     </div>

  </div>

  <div class="row mt-2">
     <div class="col-md-6">
       <%= form.label :city,class:"form-label"%>
       <%= form.text_field :city, placeholder: 'Enter Your City Name',class:"form-control" %>  
     </div>
  

   <div class="col-md-6">
     <%= form.label :area,class:"form-label"%>
     <%= form.text_field :area, placeholder: 'Enter Your Area Name',class:"form-control"%>
   </div>

  </div>
  
  
  <div class="mt-2">
     <%= form.label :postal_code,class:"form-label"%>
     <%= form.number_field :postal_code, placeholder: 'Postal Code',class:"form-control" %>
  </div>

   <div class="mt-2">
      <%= form.submit 'Save',class:"btn btn-success" %>
      <button class="btn btn-danger" id="cancel">Cancel</button>
   </div>
<% end %>
</div>