<div class="main-body">

<br/>
<br/>
<div class="container d-flex justify-content-center w-25 p-5 commonshadow"> 
  
  <div class="d-flex flex-column">
  <h2 style="text-align: center;">Log in</h2>

   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
         <%= f.label :email,class:"form-label" %><br />
         <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password,class:"form-label"%><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
       <div class="mb-3 form-check">
         <%= f.check_box :remember_me,class:"form-check-input" %>
         <%= f.label :remember_me,class:"form-check-label" %>
       </div>
      <% end %>

       <div class="actions" style="text-align: center;">
         <%= f.submit "Login",class:"btn btn-primary" %>
       </div> 
   <% end %>

      <div class="mt-3 mb-3">
        <%= link_to "Create New Account", new_registration_path(resource_name),class:"dlink" %><br />
        <%= link_to "Forgot your password?", new_password_path(resource_name),class:"dlink" %><br />
      </div>
      <%= link_to "Back to Home Page",root_path,class:"btn btn-success"%>
  </div>
   
    
</div>
</div>
