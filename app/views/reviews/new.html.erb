<div class="container border border-2 p-3">

<%= form_with(model: [current_user, @review], url: product_reviews_path(@product),remote: true) do |form| %>
  
  <div class="mt-2">
  <%= form.label :description ,class:"form-label"%>
  <%= form.text_area :description,class:"form-control" %>
 </div>
  
  <div class="mt-2">
  <%= form.label :rating,class:"form-label" %>
  <%= form.number_field :rating,in:1..5,class:"form-control",placeholder:"Enter range between 1 to 5" %>
  </div>

  <div class="mt-2">
    <%= form.label :review_images,class:"form-label" %>
    <%= form.file_field :review_images,multiple:true,class:"form-control"%>
  </div>

  <div class="mt-2">
     <%= form.label :upload_product_video,class:"form-label" %>
     <%= form.file_field :video_clip, class:"form-control" %>
  </div>
  
  <div class="mt-2">
  <%= form.submit 'Submit Review',class:"btn btn-success" %>
  </div>

<% end %>

</div>